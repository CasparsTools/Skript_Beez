function game_petHandler_follow(pet: entity, owner: player):
	while (true):
		if {test} is not true:
			stop
		set {_distance} to (distance between {_pet} and {_owner})
		if {_distance} > 10:
			game_healthbarHandler_teleport({_pet}, ({_owner}'s location))
		else if {_distance} > 2:
			make {_pet} pathfind to {_owner} with speed 1.5
		wait 10 ticks